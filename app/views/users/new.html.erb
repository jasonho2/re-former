<%= form_with model: @user do |form| %>

  <%= form.label :username %><br>
  <%= form.text_field :username, placeholder: "Your username here" %><br><br>

  <%= form.label :email %><br>
  <%= form.email_field :email, placeholder: "example@example.com" %><br><br>

  <%= form.label :password %><br>
  <%= form.password_field :password %><br><br>

  <%= form.submit "Submit" %>
<% end %>